    <div class="table-responsive" style="height: 500px; overflow-y: auto;">
        <table class="table table-striped table-hover table-bordered table-sm">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Telefone</th>
                </tr>
            </thead>
            <tbody>
                {{!-- LÃª o array de contatos --}}
                {{#each contatos}}
                    <tr>
                        <td>{{this.nome}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.telefone}}</td>
                        <td>
                            <a href="/edit/{{this.id}}"><img src="/imgs/userUpdate.png" alt="" class="img-fluid icon-small"></a>
                            <a href="/delete/{{this.id}}"><img src="/imgs/userDelete.png" alt="" class="img-fluid icon-small"></a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
