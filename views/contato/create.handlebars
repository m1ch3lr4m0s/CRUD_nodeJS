
<form action="/save" method="post" class="form-control" style="width: 50%; margin: 0 auto;" onsubmit="return validateForm()">
<h1>Adicionar Contato</h1>
    <div class="form-group">    
        <input type="text" name="nome" placeholder="Nome" class="form-control mb-2">
    </div>
    <div class="form-group">
        <input type="email" name="email" placeholder="Email" class="form-control mb-2">
    </div>
    <div class="form-group">
        <input type="text" name="telefone" placeholder="Telefone" class="form-control mb-2">
    </div>
    <button type="submit" class="btn btn-primary">Adicionar</button><button type="button" class="btn btn-danger mb-2" onclick="window.location.href='/'">Cancelar</button>
<script>
function validateForm() {
    const nome = document.forms[0]["nome"].value;
    const email = document.forms[0]["email"].value;
    const telefone = document.forms[0]["telefone"].value;
    if (nome === "" || email === "" || telefone === "") {
        alert("Todos os campos devem ser preenchidos.");
        return false;
    }
    alert("Contato adicionado com sucesso!");
    return true;
}
</script>
</form>